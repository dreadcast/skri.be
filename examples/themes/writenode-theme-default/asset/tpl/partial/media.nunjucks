<div class="embed-responsive embed-responsive-square">
	{% if media.provider == 'local' %}
		<a
			href="{{ media.url }}"
			class="embed-responsive-item embed-responsive-img"
			style="background-image: url({{ media.thumbnail }})"
		>
		</a>
	{% else %}
		<a
			href="{{ media.url }}"
			class="embed-responsive-item embed-responsive-img"
			style="background-image: url({{ media.thumbnail_url }})"
		>
		</a>
	{% endif %}
</div>
